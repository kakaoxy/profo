[Unit]
Description=Profo Frontend - Next.js Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/profo/frontend

# 使用 pnpm 启动生产服务器
ExecStart=/usr/bin/pnpm start

# 环境变量
Environment=NODE_ENV=production
Environment=PATH=/usr/local/bin:/usr/bin:/bin

# 重启策略
Restart=always
RestartSec=5

# 日志
StandardOutput=journal
StandardError=journal
SyslogIdentifier=profo-frontend

[Install]
WantedBy=multi-user.target


import React, { useState, useContext, useEffect } from 'react';
import { ProjectContext } from '../contexts/ProjectContext';
import { Project, ProjectStatus, PhotoRecord, STATUS_STEPS } from '../types';
import { Save, ArrowRight, X, Upload } from 'lucide-react';

interface SigningFormProps {
  onNavigate?: (stage: ProjectStatus) => void;
}

export const SigningForm: React.FC<SigningFormProps> = ({ onNavigate }) => {
  const { currentProject, addProject, updateProject, setView, setCurrentProject } = useContext(ProjectContext);
  
  const [formData, setFormData] = useState<Partial<Project>>({
    communityName: '',
    signingPrice: 0,
    signingCycleDays: 30,
    deliveryDate: '',
    signingDate: new Date().toISOString().split('T')[0],
    manager: '',
    otherAgreements: '',
    remarks: '',
    
    // Extended fields
    propertyAddress: '',
    ownerName: '',
    ownerContact: '',
    ownerIdCard: '',
    propertyArea: 0,
    extensionPeriod: 0,
    extensionRent: 0,
    costAssumption: '不承担',

    // Required Photos
    contractPhotos: [],
    propertyDeedPhotos: [],
    propertySurveyPhotos: [],
    idCardPhotos: [],
    bankCardPhotos: [],
    
    // Optional Photos
    decorationContractPhotos: [],
    houseHandoverPhotos: [],
    receiptPhotos: [],
    cooperationConfirmationPhotos: [],
    storeInvestmentAgreementPhotos: [],
    valueAddedServiceConfirmationPhotos: [],
    otherPhotos: []
  });

  useEffect(() => {
    if (currentProject) {
      setFormData(currentProject);
    }
  }, [currentProject]);

  const handleChange = (e: React.ChangeEvent<HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement>) => {
    const { name, value } = e.target;
    setFormData(prev => ({
      ...prev,
      [name]: (name.includes('Price') || name.includes('Days') || name.includes('Area') || name.includes('Rent') || name === 'extensionPeriod') 
        ? Number(value) 
        : value
    }));
  };

  const handleFileChange = (e: React.ChangeEvent<HTMLInputElement>, field: keyof Project) => {
    if (e.target.files && e.target.files[0]) {
      const file = e.target.files[0];
      const reader = new FileReader();
      reader.onloadend = () => {
        const newPhoto: PhotoRecord = {
          id: Date.now().toString(),
          url: reader.result as string,
          category: field.toString(),
          timestamp: Date.now()
        };
        setFormData(prev => ({
          ...prev,
          [field]: [...(prev[field] as PhotoRecord[] || []), newPhoto]
        }));
      };
      reader.readAsDataURL(file);
    }
  };

  const removePhoto = (field: keyof Project, photoId: string) => {
    setFormData(prev => ({
      ...prev,
      [field]: (prev[field] as PhotoRecord[]).filter(p => p.id !== photoId)
    }));
  };

  const validate = () => {
    if (!formData.communityName || !formData.signingPrice || !formData.manager) return false;
    // Check required photos
    if ((formData.contractPhotos?.length || 0) === 0) return false;
    if ((formData.propertyDeedPhotos?.length || 0) === 0) return false;
    if ((formData.propertySurveyPhotos?.length || 0) === 0) return false;
    if ((formData.idCardPhotos?.length || 0) === 0) return false;
    if ((formData.bankCardPhotos?.length || 0) === 0) return false;
    return true;
  };

  const handleSave = () => {
    if (currentProject) {
      updateProject(currentProject.id, formData);
      alert('已保存');
    } else {
      addProject(formData);
      alert('草稿已创建');
    }
  };

  const handleNext = () => {
    if (!validate()) {
      alert('请填写所有必填项并上传必要照片');
      return;
    }

    // Determine if we need to update status or just navigate
    const isAlreadyAdvanced = currentProject && STATUS_STEPS[currentProject.status] > STATUS_STEPS[ProjectStatus.SIGNING];
    
    if (currentProject) {
      updateProject(currentProject.id, {
        ...formData,
        status: isAlreadyAdvanced ? currentProject.status : ProjectStatus.RENOVATING,
        renovationStartDate: isAlreadyAdvanced ? currentProject.renovationStartDate : new Date().toISOString().split('T')[0]
      });
      
      if (onNavigate) {
        onNavigate(ProjectStatus.RENOVATING);
      }
    } else {
      // New project
      addProject({
        ...formData,
        status: ProjectStatus.RENOVATING,
        renovationStartDate: new Date().toISOString().split('T')[0]
      });
      // Context will update, causing parent to potentially re-render or we stay in "wizard" view.
      // For a new project, ProjectDetail will see the updated project status and should switch tab if we implement that logic there,
      // but since we are inside a callback, let's trust the context update flow.
      // Actually, since addProject updates state, ProjectDetail will re-render.
      // If ProjectDetail doesn't auto-switch activeStage, we might need a way to tell it.
      // But ProjectDetail listens to currentProject changes.
    }
  };

  const handleCancel = () => {
    setView('dashboard');
    setCurrentProject(null);
  };

  const PhotoUploadField = ({ label, field, required = false }: { label: string, field: keyof Project, required?: boolean }) => (
    <div className="space-y-2">
      <label className="block text-sm font-medium text-slate-700">
        {label} {required && <span className="text-red-500">*</span>}
      </label>
      <div className="grid grid-cols-2 md:grid-cols-4 gap-4">
        {(formData[field] as PhotoRecord[])?.map(photo => (
          <div key={photo.id} className="relative group aspect-square bg-slate-100 rounded-lg overflow-hidden border border-slate-200">
            <img src={photo.url} alt={label} className="w-full h-full object-cover" />
            <button
              onClick={() => removePhoto(field, photo.id)}
              className="absolute top-1 right-1 bg-red-500 text-white rounded-full p-1 opacity-0 group-hover:opacity-100 transition-opacity"
            >
              <X className="h-3 w-3" />
            </button>
          </div>
        ))}
        <label className="flex flex-col items-center justify-center aspect-square border-2 border-dashed border-slate-300 rounded-lg cursor-pointer hover:border-accent hover:bg-slate-50 transition-colors">
          <Upload className="h-6 w-6 text-slate-400" />
          <span className="mt-2 text-xs text-slate-500">上传照片</span>
          <input type="file" accept="image/*" className="hidden" onChange={(e) => handleFileChange(e, field)} />
        </label>
      </div>
    </div>
  );

  return (
    <div className="max-w-5xl mx-auto space-y-6 px-4">
      <div className="flex items-center justify-between sticky top-0 z-40 bg-slate-50/95 py-4 border-b border-slate-200 backdrop-blur-sm">
        <div>
          <h2 className="text-2xl font-bold text-slate-800">签约阶段</h2>
          <p className="text-slate-500 text-sm mt-1">录入签约基本信息及证件材料</p>
        </div>
        <div className="flex space-x-3">
          <button onClick={handleCancel} className="px-4 py-2 border border-slate-300 rounded-lg text-sm font-medium text-slate-600 hover:bg-slate-50">返回总览</button>
          <button onClick={handleSave} className="px-4 py-2 flex items-center bg-white border border-accent text-accent rounded-lg text-sm font-medium hover:bg-blue-50">
            <Save className="h-4 w-4 mr-2" /> 保存
          </button>
          <button onClick={handleNext} className="px-4 py-2 flex items-center bg-accent text-white rounded-lg text-sm font-medium hover:bg-blue-600 shadow-sm">
            {currentProject && STATUS_STEPS[currentProject.status] > STATUS_STEPS[ProjectStatus.SIGNING] ? '下一步: 改造' : '提交签约'} <ArrowRight className="h-4 w-4 ml-2" />
          </button>
        </div>
      </div>

      <div className="bg-white rounded-xl shadow-sm border border-slate-100 p-6 space-y-8">
        
        {/* Section 1: Basic Project Info (Required) */}
        <div>
           <h3 className="text-lg font-bold text-slate-800 border-l-4 border-accent pl-3 mb-4">项目基础信息 (必填)</h3>
           <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div>
              <label className="block text-sm font-medium text-slate-700 mb-1">小区名称 <span className="text-red-500">*</span></label>
              <input name="communityName" value={formData.communityName} onChange={handleChange} type="text" className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none" placeholder="输入小区名称" />
            </div>
            <div>
              <label className="block text-sm font-medium text-slate-700 mb-1">签约人/负责人 <span className="text-red-500">*</span></label>
              <input name="manager" value={formData.manager} onChange={handleChange} type="text" className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none" placeholder="输入负责人姓名" />
            </div>
            <div>
              <label className="block text-sm font-medium text-slate-700 mb-1">签约价格 (万元) <span className="text-red-500">*</span></label>
              <div className="relative">
                <span className="absolute left-3 top-2 text-slate-400">¥</span>
                <input name="signingPrice" value={formData.signingPrice || ''} onChange={handleChange} type="number" className="w-full pl-8 pr-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none" placeholder="0.00" />
              </div>
            </div>
            <div>
              <label className="block text-sm font-medium text-slate-700 mb-1">签约日期</label>
              <input name="signingDate" value={formData.signingDate} onChange={handleChange} type="date" className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none" />
            </div>
             <div>
              <label className="block text-sm font-medium text-slate-700 mb-1">签约周期 (天)</label>
              <input name="signingCycleDays" value={formData.signingCycleDays || ''} onChange={handleChange} type="number" className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none" placeholder="30" />
            </div>
            <div>
              <label className="block text-sm font-medium text-slate-700 mb-1">计划交房时间</label>
              <input name="deliveryDate" value={formData.deliveryDate} onChange={handleChange} type="date" className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none" />
            </div>
          </div>
        </div>

        {/* Section 2: Property & Owner Info (Optional) */}
        <div>
           <h3 className="text-lg font-bold text-slate-800 border-l-4 border-green-500 pl-3 mb-4">物业及业主信息 (选填)</h3>
           <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
             <div className="md:col-span-2">
                <label className="block text-sm font-medium text-slate-700 mb-1">物业地址</label>
                <input name="propertyAddress" value={formData.propertyAddress || ''} onChange={handleChange} type="text" className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent outline-none" placeholder="详细地址" />
             </div>
             <div>
                <label className="block text-sm font-medium text-slate-700 mb-1">产证面积 (m²)</label>
                <input name="propertyArea" value={formData.propertyArea || ''} onChange={handleChange} type="number" className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent outline-none" />
             </div>
             <div>
                <label className="block text-sm font-medium text-slate-700 mb-1">业主姓名</label>
                <input name="ownerName" value={formData.ownerName || ''} onChange={handleChange} type="text" className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent outline-none" />
             </div>
             <div>
                <label className="block text-sm font-medium text-slate-700 mb-1">联系方式</label>
                <input name="ownerContact" value={formData.ownerContact || ''} onChange={handleChange} type="text" className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent outline-none" />
             </div>
             <div>
                <label className="block text-sm font-medium text-slate-700 mb-1">身份证号</label>
                <input name="ownerIdCard" value={formData.ownerIdCard || ''} onChange={handleChange} type="text" className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent outline-none" maxLength={18} />
             </div>
             <div>
                <label className="block text-sm font-medium text-slate-700 mb-1">顺延期 (月)</label>
                <input name="extensionPeriod" value={formData.extensionPeriod || ''} onChange={handleChange} type="number" className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent outline-none" />
             </div>
             <div>
                <label className="block text-sm font-medium text-slate-700 mb-1">顺延期租金 (元/月)</label>
                <input name="extensionRent" value={formData.extensionRent || ''} onChange={handleChange} type="number" className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent outline-none" />
             </div>
             <div>
                <label className="block text-sm font-medium text-slate-700 mb-1">税费及佣金承担</label>
                <select name="costAssumption" value={formData.costAssumption} onChange={handleChange} className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent outline-none bg-white">
                  <option value="不承担">不承担</option>
                  <option value="溢价部分承担">溢价部分承担</option>
                  <option value="全部承担">全部承担</option>
                  <option value="其他">其他</option>
                </select>
             </div>
           </div>
           
           <div className="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4">
             <div>
                <label className="block text-sm font-medium text-slate-700 mb-1">其他约定</label>
                <textarea name="otherAgreements" value={formData.otherAgreements || ''} onChange={handleChange} rows={3} className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent outline-none" placeholder="如有其他约定事项请在此填写..." />
             </div>
             <div>
                <label className="block text-sm font-medium text-slate-700 mb-1">备注</label>
                <textarea name="remarks" value={formData.remarks || ''} onChange={handleChange} rows={3} className="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-accent outline-none" placeholder="其他备注信息..." />
             </div>
           </div>
        </div>

        {/* Section 3: Required Materials */}
        <div className="border-t border-slate-100 pt-6 space-y-6">
          <h3 className="text-lg font-bold text-slate-800">必要签约材料 (必填)</h3>
          <PhotoUploadField label="合同照片" field="contractPhotos" required />
          <PhotoUploadField label="产证照片" field="propertyDeedPhotos" required />
          <PhotoUploadField label="产调照片" field="propertySurveyPhotos" required />
          <PhotoUploadField label="业主身份证" field="idCardPhotos" required />
          <PhotoUploadField label="业主银行卡" field="bankCardPhotos" required />
        </div>

        {/* Section 4: Optional Materials */}
        <div className="border-t border-slate-100 pt-6 space-y-6">
          <h3 className="text-lg font-bold text-slate-800">其他签约材料 (选填)</h3>
          <div className="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-6">
             <PhotoUploadField label="装修合同" field="decorationContractPhotos" />
             <PhotoUploadField label="房屋交接书" field="houseHandoverPhotos" />
             <PhotoUploadField label="收款收据" field="receiptPhotos" />
             <PhotoUploadField label="合作房源确认函" field="cooperationConfirmationPhotos" />
             <PhotoUploadField label="门店跟投协议书" field="storeInvestmentAgreementPhotos" />
             <PhotoUploadField label="增值服务确认书" field="valueAddedServiceConfirmationPhotos" />
             <PhotoUploadField label="其他材料" field="otherPhotos" />
          </div>
        </div>
      </div>
    </div>
  );
};
